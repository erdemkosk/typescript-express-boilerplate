{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2017",
        "module": "commonjs",
        "outDir": "./dist",
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "__tests__/**/*.ts",
        "jest.setup.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "coverage"
    ]
}