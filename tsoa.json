{
    "entryFile": "src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/modules/**/*Controller.ts"],
    "spec": {
      "outputDirectory": "dist",
      "specVersion": 3,
      "securityDefinitions": {
        "jwt": {
          "type": "apiKey",
          "name": "authorization",
          "in": "header"
        }
      }
    },
    "swagger": {
      "docExpansion": "none"
    },
    "routes": {
      "iocModule": "src/ioc/index.ts",
      "routesDir": "dist",
      "middleware": "express"
    },
    "ignore": ["**/node_modules/**"]
  }